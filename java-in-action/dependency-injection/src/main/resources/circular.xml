<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
         http://www.springframework.org/schema/beans/spring-beans-2.5.xsd">


    <bean id="hostProxy" class="dependency.injection.spring.circular.HostProxy">
        <property name="delegate" ref="host"/>
    </bean>

    <bean id="host" class="dependency.injection.spring.circular.HostImpl">
        <constructor-arg ref="symbiote"/>
    </bean>

    <bean id="symbiote" class="dependency.injection.spring.circular.SymbioteImpl">
        <constructor-arg ref="hostProxy"/>
    </bean>
</beans>