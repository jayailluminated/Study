    <bean id="amplifire" class="dependency.injection.spring.Amplifier">
        <property name="guitar">
            <bean class="dependency.injection.model.Guitar" />
        </property>
        <property name="speaker">
            <bean class="dependency.injection.model.Speaker" />
        </property>
        <property name="footpedal">
            <bean class="dependency.injection.model.Footpedal" />
        </property>
        <property name="synthesizer">
            <bean class="dependency.injection.model.Synthesizer" />
        </property>
    </bean>


</beans>